{{> navbar}}
<div class="container">
   <nav class="mt-3 " aria-label="breadcrumb ">

  <ol class="breadcrumb">
    <li class="breadcrumb-item "><a href="/paths">Paths List</a></li>
    <li class="breadcrumb-item active" aria-current="/paths/editPath/{{this.id}}">Edit Path</li>
  </ol>
</nav>

{{#if alert}}
<div class="alert {{alertClass}} alert-dismissible fade show" role="alert">
  {{alert }}
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

   {{#each rows}}
<form action="/paths/editPath/{{this.id}}"  enctype="multipart/form-data" class="row g-3 needs-validation" method="post" novalidate>

   {{> pathForm}}
  
</form>
   {{/each}}

</div>
